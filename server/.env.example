# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/powhunter?sslmode=disable

# Twilio Configuration (for SMS alerts)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# SMTP Configuration (for contact form emails)
# Email will be sent to support@powhunter.app
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM_EMAIL=noreply@powhunter.app

# Optional: Contact Log Path
# CONTACT_LOG_PATH=/var/log/powhunter/contacts.log

# Environment
ENVIRONMENT=development
